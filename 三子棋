#include<stdio.h>
#include<time.h>
#include<stdlib.h>
#define h 3
#define l 3

menu()
{
	printf("**************************\n");
	printf("********* 菜    单  ******\n");
	printf("*********开始    1  ******\n");
	printf("*********退出    0  ******\n");
	printf("**************************\n");
}

csh(char b[h][l],int h1,int l1)
{
	int i,j;
	for(i=0;i<h1;i++)
	{
		for(j=0;j<l1;j++)
		{
			b[i][j]=0;
		}
	}
}
//   |   |   
//---|---|---
//   |   |   
//---|---|---
//   |   |  
zhanshi(char b[h][l],int h1,int l1)
{
	int i,j;
	for(i=1;i<=h1;i++)
	{
		for(j=1;j<=l1;j++)
		{
			printf(" %c ",b[i][j]);
			if(j<l1)
			printf("|"); 
		}
		printf("\n");
		if(i<h1)
		{
			for(j=1;j<=l1;j++)
		{
			printf("---");
			if(j<l1)
			printf("|");
		}
		}
		printf("\n");
	}
	printf("\n");
}

wanjia(char b[h][l],int h1,int l1)
{
	int h2,l2; 
	printf("请选择你要落子的坐标->:");
	scanf("%d%d",&h2,&l2);
	do
	{
		if((h2>=1&&h2<=3)&&(l2>=1&&l2<=3))
		{
			if(b[h2][l2]!='X'&&b[h2][l2]!='O')
			{
				b[h2][l2]='X';
				break;
			}
			else 
			{
				printf("此位置已落子，请重新选择落子位置->:");
				scanf("%d%d",&h2,&l2);
			}
		}
		else
		{
			printf("输入位置无效，请重新输入->:");
			scanf("%d%d",&h2,&l2);
		}
		
	}while(1);
}

int pan(char b[h][l],int h1,int l1)
{
	int i,j,t;
	t=0;
	for(i=1;i<=h1;i++)
	        {
				for(j=1;j<=l1;j++)
				{
					if(b[i][j]=='X'||b[i][j]=='O')
					t++;
				}
			}
	if(t==9)
	return 1;
	else 
	return 0;
}

diannao(char b[h][l],int h1,int l1)
{
	int d;
	d=pan(b,h,l);
	int h2=rand()%3+1;
	int l2=rand()%3+1;
	do
	{
		if(d==1)
		break;
		if(b[h2][l2]!='X'&&b[h2][l2]!='O')
			{
				b[h2][l2]='O';
				break;
			}
			else
			{
				h2=rand()%3+1;
	            l2=rand()%3+1;
			}
			
			
	}while(1);
}

char panduan(char b[h][l],int h1,int l1)
{
	int i,j,t;
	for(i=1;i<h1+1;i++)
	{
		if(b[i][1]==b[i][2]&&b[i][2]==b[i][3])
		return b[i][1];
	}
	for(j=1;j<=l1;j++)
	{
		if(b[1][j]==b[2][j]&&b[2][j]==b[3][j])
		return b[1][j];
	}
	if(b[1][1]==b[2][2]&&b[2][2]==b[3][3])
	return b[2][2];
	if(b[1][3]==b[2][2]&&b[2][2]==b[3][1])
	return b[2][2];
	for(i=1;i<=h1;i++)
	{
		for(j=1;j<=l1;j++)
		{
			if(b[i][j]!='X'&&b[i][j]!='O')
			return 'c';
		}
	}
	return 'p';
}


luozi(char b[h][l],int h1,int l1)
{
	char s;
	do
	{
		wanjia(b,h,l);
		zhanshi(b,h,l);
	    diannao(b,h,l);
	    zhanshi(b,h,l);
	    s=panduan(b,h,l);
	    if(s=='X')
	    {
	    	printf("恭喜你！你赢了!\n");
	    	break;
		}
		else if(s=='O')
		{
			printf("OH！NO！你输了，电脑赢了！\n");
			break;
		}
		else if(s=='p')
		{
			printf("大家都没赢--平局!\n");
			break;
		}
		else
		continue;
	}while(1);
}


game()
{
	int i,j;
	char b[h][l];
	csh(b,h,l);
	zhanshi(b,h,l);
	luozi(b,h,l);
}

int main()
{
	int s;
	srand((unsigned int)time(NULL));
	do
	{
		menu();
		printf("请选择选项->:");
		scanf("%d",&s);
		if(1==s)
		game();
		else if(0==s)
	    break;
		else
		printf("输入无效，请重新输入->:\n");
	}while(s);
	return 0;
 } 
